<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Reboot America" %></title>

  <link rel="shortcut icon" href="assets/favicon.png" />

  <%= stylesheet_link_tag :application %>
  <%= javascript_include_tag :application %>

  <!-- Typekit embed -->
  <script type="text/javascript" src="//use.typekit.net/yyh1wtb.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <!-- end Typekit -->

  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>

    <nav>
      <div class="wrap">
        <%= render 'layouts/navigation' %>
      </div>
    </nav>

    <div class="summit-header">
      <div class="wrap">
        <div style="text-align:right; display:inline-block; width:490px; margin-right:1em;">
          <h3>You're invited to the Reboot America Summit</h3>
          <aside>Where the hottest startups are changing America</aside>
          <time>November 8 and 9, Washington, DC</time>
        </div>
        <a href="http://rebootamerica.org/the-summit" class="btn alternate" style="margin-left:2em;">Register Now<span>Come to the Summit</span></a>
      </div>
    </div> 

    <div class="main">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

      <%= yield %>
    </div>

    <footer>
      <div class="wrap">
        <%= render 'layouts/footer' %>
      </div>
    </footer> 


<% if Rails.env.production? %>
  <!-- begin Google Analytics -->
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-35315547-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  <!-- end Google Analytics -->
<% end %>

</body>
</html>
